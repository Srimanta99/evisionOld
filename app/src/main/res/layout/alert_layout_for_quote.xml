<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <!--<ImageView
            android:id="@+id/img_cart_cross"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"></ImageView>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rectangular_rounded_shape__gery_broder">

        <ImageView
            android:id="@+id/img_cart_cross"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_margin="@dimen/_7sdp"
            android:background="@drawable/alert_close"
            android:layout_alignParentRight="true"></ImageView>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:text="Producto agregado "
            android:drawableLeft="@drawable/thumb_up"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/green"
            android:layout_marginLeft="@dimen/_55sdp"
            android:padding="@dimen/_5sdp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"
            android:layout_below="@+id/tv_message"
            android:layout_margin="@dimen/_5sdp"
          ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_14sdp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rectangle_shape_skyblue_rounded_corner_"

                android:layout_weight="1">

                <TextView
                    android:id="@+id/btn_view_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"

                  android:gravity="center"
                    android:text="Ver solicitud"
                    android:textAllCaps="false"

                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"></TextView>
                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_alignParentRight="true"

                    android:background="@drawable/popup_arrow_icon"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_centerVertical="true"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_shape_green_rounded_corner_"

                >
                <TextView
                    android:id="@+id/btn_keep_buying"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentBottom="true"
                    android:text=" seguir cotizando"

                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                   android:gravity="center"

                     android:layout_centerInParent="true"

                    ></TextView>

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_13sdp"


                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_keep_buying"

                    android:background="@drawable/popup_cart_icon"></ImageView>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>