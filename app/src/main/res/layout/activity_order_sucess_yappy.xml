<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartManage.OrderSucessActivity">
    <!--<android.support.design.widget.AppBarLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:theme="@style/AppTheme.AppBarOverlay">-->

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--android:background="?attr/colorPrimary"-->
    <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    <!--</android.support.design.widget.AppBarLayout>-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".CartManage.OrderSucessActivity"
        tools:showIn="@layout/activity_order_sucess">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_sucess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/thankyou"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/foryourorder"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_ORDERID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/orderno_"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_ORDERSTATUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/orderstatus"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_thankyou_msg_pic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TXT_TRACK1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_rounded_bg_red"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:text="@string/tracyourorderhere"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="or" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TXT_CONTINUTE1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_button_rounded_corner"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/continueshoping"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_7sdp"
                android:padding="@dimen/_7sdp"
                android:background="@drawable/reantangle_shape_grey_broder"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_73sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/yappy_payment"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical|bottom"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:text="\@Evision">

                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_faild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
      <ImageView
          android:id="@+id/img_faild"
       android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_55sdp"
          android:layout_margin="@dimen/_13sdp"
          android:background="@drawable/red_alert"
          android:layout_gravity="center">
      </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/thankyou"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_25sdp" />
            <TextView
                android:id="@+id/TXT_ORDERID_faild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/orderno_"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/TXT_ORDERSTATUS_faild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/orderstatus"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_11sdp"
                android:text="Recibirás un correo electrónico de confirmación en breve."></TextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TXT_CONTINUTE_faild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_button_rounded_corner"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/continueshoping"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <LinearLayout
                android:id="@+id/llyappy"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_margin="@dimen/_7sdp"
                android:padding="@dimen/_7sdp"
                android:gravity="center"
                android:background="@drawable/reantangle_shape_grey_broder"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_73sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/yappy_payment"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical|bottom"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:text="\@Evision">

                </TextView>
            </LinearLayout>


        </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>